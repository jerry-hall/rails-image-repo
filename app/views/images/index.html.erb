<p id="notice"><%= notice %></p>

Search
<%= form_tag('images/search', :method => "get") do %>
<div class="input-group">
  <%= search_field_tag :search, params[:search], placeholder: "Enter Name or Description", class: "form-control", style: "width:14em" %>
  <%= button_tag "Search for Image", :name => nil %>
</div>
<% end %>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
