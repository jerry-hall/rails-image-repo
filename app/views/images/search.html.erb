<h3>Search Results</h3>

    <table>
        <thead>
            <tr>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <% @results.each do |result| %>
            <tr>
                <td><%= result.name %></td>
                <td><%= link_to 'Show', result %></td>
                <td><%= link_to 'Edit', edit_image_path(result) %></td>
                <td><%= link_to 'Delete', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        <% if @results.empty? %>
        No results found.
        <% end %>
        </tbody>
    </table>